<%_ if (primaryKey.type === 'UUID') { _%>
import java.util.UUID;
<%_ } _%>

class <%= entityClass %>Test {

<%_
function computeValue(entity, entityNbr = 1) {
    const prefix = entityNbr === 1 ? 'DEFAULT_' : 'UPDATED_';
    if (entity.primaryKey.composite) {
        return `new ${entity.entityClass}Id(${entity.primaryKey.references.map(pk => pk.field.fieldType === 'Long' ? `${entityNbr}L` : pk.entity.entityClass + 'ResourceIT.' + prefix + pk.field.fieldNameUnderscored.toUpperCase()).join(', ')})`;
    } else {
        const field = entity.primaryKey.references[0].field;
        if (entity.primaryKey.autoGenerated) {
            if (field.fieldType === 'Long') {
                return `${entityNbr}L`;
            } else if (field.fieldType === 'String') {
                return `"ID${entityNbr}"`;
            } else if (field.fieldType === 'UUID') {
                return `UUID.fromString("${entityNbr}fec3727-3421-4967-b213-ba36557ca194")`;
            } else {
                new Error(`autoGenerated id of type ${field.fieldType} is not supported`)
            }
        } else {
            return `${field.reference.entity.entityClass}ResourceIT.${prefix}${field.fieldNameUnderscored.toUpperCase()}`
        }
    }
}
_%>
    @Test
    void equalsVerifier() throws Exception {
        TestUtil.equalsVerifier(<%= asEntity(entityClass) %>.class);
    <%_if (!embedded) { _%>
        <%= asEntity(entityClass) %> <%= entityInstance %>1 = new <%= asEntity(entityClass) %>();
        <%= entityInstance %>1.set<%= primaryKey.nameCapitalized %>(<%- computeValue(this, 1) %>);
        <%= asEntity(entityClass) %> <%= entityInstance %>2 = new <%= asEntity(entityClass) %>();
        <%= entityInstance %>2.set<%= primaryKey.nameCapitalized %>(<%- computeValue(this, 1) %>);
        assertThat(<%= entityInstance %>1).isEqualTo(<%= entityInstance %>2);
        <%= entityInstance %>2.set<%= primaryKey.nameCapitalized %>(<%- computeValue(this, 2) %>);
        assertThat(<%= entityInstance %>1).isNotEqualTo(<%= entityInstance %>2);
        <%= entityInstance %>1.set<%= primaryKey.nameCapitalized %>(null);
        assertThat(<%= entityInstance %>1).isNotEqualTo(<%= entityInstance %>2);
    <%_} _%>
    }
}
