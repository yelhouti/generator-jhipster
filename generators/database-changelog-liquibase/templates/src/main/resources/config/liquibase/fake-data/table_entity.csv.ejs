<%_
let table = [];

// Generate CSV header
let header = [];
for (idx in fields) {
    if (!fields[idx].derivedId) {
        header.push(fields[idx].columnName);
        if (fields[idx].fieldType === 'byte[]' && fields[idx].fieldTypeBlobContent !== 'text') {
            header.push(fields[idx].columnName + '_content_type');
        }
    }
}
for (idx in relationships) {
    const relationshipType = relationships[idx].relationshipType
    if (
        (relationshipType === "many-to-one" || (relationshipType === "one-to-one" && relationships[idx].ownerSide === true)) &&
            ((relationships[idx].relationshipValidate === true && relationships[idx].relationshipRequired) || relationships[idx].id)
    ) {
        relationships[idx].otherEntity.primaryKey.references.forEach(pk => {
            header.push(`${getColumnName(relationships[idx].relationshipName)}_${pk.columnName}`);
        })
    }
}
table.push(header);

// Set number of rows to be generated
let numberOfRows = 10;
for (idx in relationships) {
    if ( relationships[idx].id && relationships[idx].relationshipType === 'one-to-one' ) {
        const otherEntityNameCapitalized = relationships[idx].otherEntityNameCapitalized;
        if (otherEntityNameCapitalized === 'User') {
            // Only few user records are generated
            numberOfRows = (authenticationType === 'oauth2') ? 0 : 2;
        }
        break;
    }
}

// Generate CSV rows

for (lineNb = 1; lineNb <= numberOfRows; lineNb++) {
    let line = [];
    for (idx in fields) {
        if (!fields[idx].derivedId) {
            if (fields[idx].id) {
                line.push(lineNb);
            } else {
                let data = fields[idx].generateFakeData();
                // manage required
                if (data === undefined) {
                    if (fields[idx].fieldValidateRules.includes('required')) {
                        line = [];
                        break;
                    }
                    data = '';
                }

                line.push(data);
                if (fields[idx].columnType === 'blob' || fields[idx].columnType === 'longblob') {
                    line.push('image/png');
                }
            }
        }
    }

    for (idx in relationships) {
        const relationshipType = relationships[idx].relationshipType;
        if (
            (relationshipType === "many-to-one" || (relationshipType === "one-to-one" && relationships[idx].ownerSide === true)) &&
                ((relationships[idx].relationshipValidate === true && relationships[idx].relationshipRequired)|| relationships[idx].id)
        ) {
            if (relationships[idx].otherEntityNameCapitalized === 'User') {
                if (relationships[idx].id && relationships[idx].relationshipType === 'one-to-one') {
                    if (lineNb <= 2) {
                        line.push(lineNb);
                    } else {
                        break;
                    }
                } else {
                    line.push(entity.faker.random.number({min: 1, max: 2}));
                }
            } else {
                relationships[idx].otherEntity.primaryKey.references.forEach(() => {
                    line.push(lineNb);
                })
            }
        }
    }
    if (line.length === header.length) {
        table.push(line);
    }
}

let result = table
        .map(line => line.join(';'))
        .join('\n');
 _%>
<%- result %>
